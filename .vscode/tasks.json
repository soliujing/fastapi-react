{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: install",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"command": "bash",
			"args": [
				"-c",
				"npm install"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "uv: sync venv",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"command": "bash",
			"args": [
				"-c",
				"[[ ! -d .venv ]] && uv venv .venv && uv sync || echo 'venv already exists'"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]
}
